# Zero Email - Tailscale HTTPS Configuration
#
# Copy this file to .env and fill in your values.
# Replace <your-hostname> with your actual Tailscale hostname.
#
# To find your hostname:
#   tailscale status
#
# Example: If your hostname is "pi.tail-abc123.ts.net", replace all
# occurrences of <your-hostname>.ts.net with pi.tail-abc123.ts.net

# =============================================================================
# Tailscale Hostname (REQUIRED - update this!)
# =============================================================================
TAILSCALE_HOSTNAME=<your-hostname>.ts.net

# =============================================================================
# Application URLs (update <your-hostname> to match TAILSCALE_HOSTNAME)
# =============================================================================
APP_URL=https://<your-hostname>.ts.net
BACKEND_URL=https://<your-hostname>.ts.net/api
BASE_URL=https://<your-hostname>.ts.net

# =============================================================================
# Authentication Configuration
# =============================================================================
BETTER_AUTH_URL=https://<your-hostname>.ts.net
BETTER_AUTH_TRUSTED_ORIGINS=https://<your-hostname>.ts.net
BETTER_AUTH_SECRET=change-me-use-openssl-rand-hex-32

# Cookie domain - use just the hostname without protocol
COOKIE_DOMAIN=<your-hostname>.ts.net

# =============================================================================
# Google OAuth Configuration
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# IMPORTANT: Add this exact URI to Google Cloud Console -> OAuth 2.0 credentials
# Under "Authorized redirect URIs"
GOOGLE_REDIRECT_URI=https://<your-hostname>.ts.net/api/auth/callback/google

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=zerodotemail

# =============================================================================
# MinIO/S3 Configuration (for standalone deployment)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-in-production
S3_BUCKET=threads

# For Pi deployment with shared MinIO, set external endpoint:
# S3_ENDPOINT_EXTERNAL=http://172.17.0.1:9000

# =============================================================================
# API Keys (optional - for AI features)
# =============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_MINI_MODEL=gpt-4o-mini
RESEND_API_KEY=
PERPLEXITY_API_KEY=
ANTHROPIC_API_KEY=

# =============================================================================
# Security
# =============================================================================
JWT_SECRET=change-me-use-openssl-rand-hex-32
